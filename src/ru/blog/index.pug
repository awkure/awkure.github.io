extends ../../../layouts/blog

//- mixin posts(articles)

block title 
    title adam | Блог

block content 
    +header('корень/блог', 'ru')
    .logo 
        h1 Блог
    main 
        - 
            const articles = [ [ "Отступ-в-Формальную-Философию.html" , 2018 ] ]
            const years = [...new Set(articles.reduce((acc, cur) => [...acc, cur[1]], []))]
            const renderTitle = a => a.slice(0,-5).split('-').join(' ')
        each year in years 
            section 
                h3 #{year}
                p
                    each file in articles.filter(x => x[1] === year)
                        a(href=year + '/' + file[0]) #{renderTitle(file[0])}