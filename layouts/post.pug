                                            TEX.Definitions.Add({
                                                macros: {
                                                llparenthesis: ['Macro', '\\mathopen{\u2987}'],
                                                rrparenthesis: ['Macro', '\\mathclose{\u2988}'],
                                                llbracket:     ['Macro', '\\mathopen{\u27E6}'],
                                                rrbracket:     ['Macro', '\\mathclose{\u27E7}'],
                                                }
                                            });
                                        });
                                    },
                                    tex2jax: { inlineMath: [['$','$'], ['\\(','\\)']],
                                                processEscapes: true }
                                    };

